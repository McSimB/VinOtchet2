<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:paddingTop="@dimen/abc_dialog_padding_top_material"
  android:paddingLeft="?attr/dialogPreferredPadding"
  android:paddingRight="?attr/dialogPreferredPadding"
  android:orientation="vertical"
  tools:viewBindingIgnore="true">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:labelFor="@id/edit_text_range_stamps"
    android:text="@string/range" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/text_view_letter_stamps"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?attr/textAppearanceTitleLarge"
      tools:text="Ð®" />

    <EditText
      android:id="@+id/edit_text_range_stamps"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:autofillHints="no"
      android:minEms="2"
      android:inputType="numberDecimal"
      android:textAppearance="?attr/textAppearanceTitleLarge"
      tools:text="091" />

  </LinearLayout>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:labelFor="@id/edit_text_number_stamps"
    android:text="@string/number" />

  <EditText
    android:id="@+id/edit_text_number_stamps"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:autofillHints="no"
    android:minEms="5"
    android:inputType="numberDecimal"
    android:textAppearance="?attr/textAppearanceTitleLarge"
    tools:text="009850501" />

</LinearLayout>

