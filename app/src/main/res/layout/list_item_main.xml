<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?attr/colorSecondaryContainer"
  android:foreground="?attr/selectableItemBackground"
  android:longClickable="true"
  tools:viewBindingIgnore="true">

  <ImageView
    android:id="@+id/ic_main"
    android:layout_width="60dp"
    android:layout_height="82dp"
    android:layout_marginStart="16dp"
    android:layout_centerVertical="true"
    android:background="?attr/colorOutlineVariant"
    android:contentDescription="@string/label"
    tools:ignore="ImageContrastCheck" />

  <TextView
    android:id="@+id/text_main_sort"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_toEndOf="@id/ic_main"
    android:layout_toStartOf="@+id/text_main_counter1"
    android:ellipsize="middle"
    android:lines="1"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    tools:text="Мелодии лета 0.7" />

  <TextView
    android:id="@+id/text_main_counter1"
    android:layout_width="96dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_alignParentEnd="true"
    android:paddingStart="0dp"
    android:paddingEnd="4dp"
    android:background="@drawable/rect_rounded_frame"
    android:gravity="end"
    android:textAppearance="?attr/textAppearanceHeadlineMedium"
    tools:text="3456" />

  <TextView
    android:id="@+id/text_main_counter2"
    android:layout_width="96dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="16dp"
    android:layout_below="@id/text_main_counter1"
    android:paddingStart="0dp"
    android:paddingEnd="4dp"
    android:background="@drawable/rect_rounded_frame"
    android:gravity="end"
    android:textAppearance="?attr/textAppearanceHeadlineMedium"
    tools:text="3456" />

  <TextView
    android:id="@+id/text_main_stamps1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="16dp"
    android:layout_below="@+id/text_main_sort"
    android:layout_toStartOf="@id/text_main_counter2"
    tools:text="Ю090 006699333" />

  <TextView
    android:id="@+id/text_main_stamps2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="16dp"
    android:layout_below="@+id/text_main_stamps1"
    android:layout_toStartOf="@id/text_main_counter2"
    tools:text="Ю090 006699333" />

</RelativeLayout>

